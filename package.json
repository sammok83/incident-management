{
    "name": "incident-management",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "express": "^4",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3",
        "passport": "^0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "axios": "^1.6.1",
        "cds-plugin-ui5": "^0.7.2",
        "chai": "^4.3.10",
        "chai-as-promised": "^7.1.1",
        "chai-subset": "^1.6.0",
        "jest": "^29.7.0",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "test": "jest tests/test.js",
        "start": "cds-serve",
        "build-for-production": "cds build --production",
        "add-xsuaa": "cds add xsuaa --for production",
        "add-hana-for-production": "cds add hana --for production",
        "watch-incidents": "cds watch --open ns.incidents/index.html?sap-ui-xx-viewCache=false --livereload false",
        "undeploy": "cf undeploy incident-management --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "workspaces": [
        "app/*"
    ],
    "sapux": [
        "app/incidents"
    ],
    "cds": {
        "requires": {
            "[development]": {
                "auth": {
                    "kind": "mocked",
                    "users": {
                        "support.user": {
                            "password": "initial",
                            "roles": [
                                "support"
                            ]
                        },
                        "sam": {
                            "roles": [
                                "support"
                            ]
                        },
                        "alice": {
                            "roles": [
                                "support"
                            ]
                        },
                        "bob": {
                            "roles": [
                                "support"
                            ]
                        }
                    }
                }
            },
            "[production]": {
                "db": "hana",
                "auth": "xsuaa"
            }
        }
    }
}